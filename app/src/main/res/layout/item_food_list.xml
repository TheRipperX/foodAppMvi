<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/items_bg_sh_food_list"
    android:elevation="3dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_food_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/TopRoundedImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="2dp"
        android:paddingHorizontal="4dp"
        android:elevation="2dp"
        android:alpha="0.7"
        android:background="@color/LightCyan"
        app:layout_constraintBottom_toBottomOf="@id/img_food_list"
        app:layout_constraintRight_toRightOf="@id/img_food_list"
        app:layout_constraintLeft_toLeftOf="@id/img_food_list"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_food_list_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_food_area"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/black"
            android:hint="@string/title_food_name"
            android:ellipsize="marquee"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_food_"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:hint="@string/fastfood"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:drawableTint="@color/MediumBlue"
            android:drawableStart="@drawable/baseline_fastfood_24"
            android:ellipsize="marquee"
            android:layout_height="wrap_content"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/txt_food_area"
            app:layout_constraintLeft_toRightOf="@id/txt_food_"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="1"
            android:drawablePadding="5dp"
            android:hint="@string/iran"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:drawableTint="@color/MediumBlue"
            android:drawableStart="@drawable/baseline_language_24"
            android:ellipsize="marquee"
            android:layout_height="wrap_content"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/txt_food_site"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:drawableTint="@color/MediumBlue"
            android:drawableStart="@drawable/baseline_open_in_browser_24"
            android:ellipsize="marquee"
            android:layout_height="wrap_content"
            tools:ignore="UseCompatTextViewDrawableXml" />
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>